            var itemId = tabType.substring(1, tabType.length);
            $('#'+itemId).children().each(function(){
                var allclass = $(this).find('.course-scroll').attr('class');
                if(allclass.indexOf('hidden') < 0)
                {
                    $(this).find('.course-scroll').addClass('hidden');
                }
            });
            setTimeout(function () {
                maxcount = 16;
